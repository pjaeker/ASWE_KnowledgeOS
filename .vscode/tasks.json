{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Security: Scan Changed (OptionB)",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/optionb/scan_incremental.sh",
        "--scope",
        "changed"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Security: Scan All (OptionB)",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/optionb/scan_all.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false,
        "clear": true
      }
    },
    {
      "label": "Security: Preflight",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/optionb/preflight.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    },
    {
      "label": "Security: Repo Gates",
      "type": "shell",
      "command": "bash",
      "args": [
        "scripts/optionb/run_gates.sh"
      ],
      "options": {
        "cwd": "${workspaceFolder}"
      },
      "problemMatcher": [],
      "presentation": {
        "reveal": "always",
        "panel": "shared",
        "showReuseMessage": false
      }
    }
  ]
}
